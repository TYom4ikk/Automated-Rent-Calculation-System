<Page x:Class="RentCalculation.View.AccountantMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная страница бухгалтера">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button x:Name="TariffsButton" Content="Тарифы" Click="TariffsButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="InvoicesButton" Content="Квитанции" Click="InvoicesButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="LogoutButton" Content="Выйти" Click="LogoutButton_Click"/>
        </StackPanel>

        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page> 