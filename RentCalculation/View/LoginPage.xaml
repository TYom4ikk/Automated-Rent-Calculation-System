<Page x:Class="RentCalculation.View.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Авторизация">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Авторизация" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <TextBlock Text="Email:" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>
            
            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>
            
            <Button x:Name="LoginButton" Content="Войти" Click="LoginButton_Click" Height="30"/>
        </StackPanel>
    </Grid>
</Page> 