<Page x:Class="RentCalculation.View.HabitantView.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RentCalculation.View.HabitantView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главная страница">

    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Главная страница жильца" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Кнопки навигации -->
        <StackPanel Grid.Row="1" 
                    Orientation="Vertical" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <Button Content="Показания счетчиков" 
                    Click="MeterReadingsButton_Click" 
                    Padding="20,10" 
                    Margin="0,0,0,10" 
                    Width="200"/>
            <Button Content="История платежей" 
                    Click="PaymentHistoryButton_Click" 
                    Padding="20,10" 
                    Margin="0,0,0,10" 
                    Width="200"/>
            <Button Content="Личные данные" 
                    Click="PersonalDataButton_Click" 
                    Padding="20,10" 
                    Width="200"/>
        </StackPanel>
    </Grid>
</Page> 